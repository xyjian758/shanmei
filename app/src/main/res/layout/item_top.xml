<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/login_393a3e">
    <!--返回-->
    <LinearLayout
        android:id="@+id/ll_item_top_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_back_whilt" />
    </LinearLayout>
    <!--标题-->
    <TextView
        android:id="@+id/tv_item_top_title"
        style="@style/text_wrap_18_white"
        android:layout_centerInParent="true"
        android:text="@string/item_top_title" />
    <!--右侧图标-->
    <ImageView
        android:id="@+id/iv_item_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@mipmap/logo" />


</RelativeLayout>